
#include <iostream> // pengarah yang memberi tahu kepada kompiler untuk meletakan kode dari header file iostream kedalam program

using namespace std;  // intruksi terhadap compiler untuk menggunakan semua fungsi yang terkait untuk kerangka yang sama

int main() { // tipe data yang akan dikembalikan nilainya kembali,karena memiliki nilai balik maka diberikan perintah return nilai (return 0), { adalah awal eksekusi program

 double nilai_tugas; // digunakan untuk tipe data bilangan desimal

 double nilai_uts; // digunakan untuk tipe data bilangan desimal

 double nilai_uas; // digunakan untuk tipe data bilangan desimal
 
 // nilai tugas

 cout << "Masukkan nilai Tugas:" << endl; // untuk mencetak output,endl berguna menyisipkan karakter NewLine atau mengatur pindah baris

 cin >> nilai_tugas; // untuk meminta inputan nilai tugas tersebut

 if (nilai_tugas > 100) { // kondisi dimana jika nilai atau inputan tidak sesuai maka... ( dilanjutkan di cout), { adalah awal eksekusi program

   cout << "Nilai tidak valid" << endl; // mencetak tulisan tersebut apabila kondisi if terpenuhi

   return 0; // mengembalikan nilai ke inputan terakhir

 } // akhir dari eksekusi program
 
 // nilai UTS

 cout << "Masukkan nilai UTS:" << endl; // penjelasan pada nilai UTS sama dengan nilai Tugas dikarenakan kode yang digunakan sama

 cin >> nilai_uts;

 if (nilai_uts > 100) {

   cout << "Nilai tidak valid" << endl;

   return 0;

 }

// nilai UAS

 cout << "Masukkan nilai UAS:" << endl; // penjelasan pada nilai UAS sama dengan nilai tugas dikarenakan kode yang digunakan sama 

 cin >> nilai_uas;

 if (nilai_uas > 100) {

   cout << "Nilai tidak valid" << endl;

   return 0;

 }

 double nilai_keseluruhan = nilai_tugas * 0.2 // untuk menghitung nilai dari keselurahan inputan

   + nilai_uts * 0.3

   + nilai_uas * 0.5;

 cout << "Total Nilai Keseluruhan =  " // mencetak total nilai keseluruhan yang telah didapatkan dari inputan 

   << nilai_keseluruhan << endl;

 return 0; // mengakhiri proses program atau mengembalikan nilai pada inputan yang terakhir

} // akhir dari eksekusi program 
